@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css">
    <style>
        /* Стилове за деактивирания бутон */
        .disabled-btn {
            color: #aaa;
            background-color: #ddd;
            cursor: not-allowed;
            pointer-events: none;
        }

        /* Стилове за новите бутони */
        .custom-button {
            padding: 8px 20px; /* Намаляваме размера на бутоните */
            font-size: 14px; /* По-малък шрифт */
            font-weight: bold;
            border: none;
            border-radius: 8px;
            background: linear-gradient(135deg, #ff4500, #ff6347);
            color: white;
            cursor: pointer;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
            margin: 10px 0; /* Разстояние между бутоните */
        }

            .custom-button:hover {
                background: linear-gradient(135deg, #ff8a80, #ff5252);
                transform: scale(1.05);
                box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.3);
            }

            .custom-button:active {
                transform: scale(0.95);
                box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.4);
            }

        /* Контейнер за бутоните */
        .button-container {
            display: flex;
            flex-direction: column; /* Поставя бутоните един под друг */
            align-items: center;
            margin-top: 20px; /* Разстояние от предишния елемент */
        }

        /* Стилове за бутона SHOP NOW */
        .btn {
            padding: 16px 32px;
            font-size: 18px;
            font-weight: bold;
            border: none;
            border-radius: 30px;
            background: linear-gradient(135deg, #ff4500, #ff6347);
            color: white;
            cursor: pointer;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

            .btn:hover {
                background: linear-gradient(135deg, #ff8a80, #ff5252);
                transform: scale(1.05);
                box-shadow: 0px 6px 12px rgba(255, 99, 71, 0.8);
            }

            .btn:active {
                transform: scale(0.95);
                box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.4);
            }

    </style>
</head>
<body>
    <header>
        <div class="navbar">
            <h1 class="logo">DirtXtreme</h1>
        </div>
    </header>

    <section class="hero">
        <div class="hero-overlay">
            <div class="hero-content">
                <h1>Explore the Best Dirt Bikes</h1>
                <p>Your ultimate destination for off-road adventures.</p>
                <!-- Работещ бутон -->
                <a href="/DirtBike/Index" class="btn">Shop Now</a>
                <!-- Новите бутони под SHOP NOW -->
                <div class="button-container">
                    <a href="https://www.google.com/maps?q=-43.4856757,172.6577761" target="_blank">
                        <button class="custom-button">
                            DirtXtreme Shop Location
                        </button>
                    </a>
                    <a href="@Url.Action("Reviews", "Home")">
                        <button class="custom-button">
                            DirtXtreme Reviews
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <footer>
        <p>&copy; 2024 DirtXtreme. All Rights Reserved.</p>
    </footer>
</body>
</html>
